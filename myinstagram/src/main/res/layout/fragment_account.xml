<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/profile_top_layout"
        android:paddingHorizontal="5dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/account_profile_image"
            android:src="@drawable/ic_account"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/account_profile_image"
            android:id="@+id/follow_button"
            android:layout_alignParentBottom="true"
            android:text="@string/follow_button" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/follow_button"
            android:layout_toEndOf="@id/account_profile_image"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0\n게시물"
                android:background="@color/white"
                android:id="@+id/profile_button_feed">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0\n팔로잉"
                android:background="@color/white"
                android:id="@+id/profile_button_following">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0\n팔로워"
                android:background="@color/white"
                android:id="@+id/profile_button_follower">
            </Button>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_top_layout"
        android:id="@+id/profile_recycler_view"/>
</LinearLayout>


